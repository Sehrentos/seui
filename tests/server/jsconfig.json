{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"module": "NodeNext",
		"target": "ESNext",
		"moduleResolution": "nodenext",
		"noImplicitAny": false,
		"resolveJsonModule": true,
		"typeRoots": [
			"./node_modules/@types"
		]
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"**/*.js",
		"**/*.ts"
	],
	"typeAcquisition": {
		"enable": true,
		"include": []
	}
}
